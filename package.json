{
  "name": "@cicerchie/ui",
  "version": "0.2.3",
  "description": "A set of web components for building fast user interfaces.",
  "author": "https://github.com/cicerchia",
  "license": "MIT",
  "homepage": "https://github.com/cicerchie/ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cicerchie/ui.git"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/cicerchia"
  },
  "bugs": {
    "url": "https://github.com/cicerchie/ui/issues"
  },
  "keywords": [
    "svelte ui",
    "svelte",
    "tailwind ui",
    "tailwindcss",
    "web components",
    "component library",
    "design system"
  ],
  "files": [
    "src",
    "dist",
    "tailwind.config.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "svelte": "src/index.ts",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rm -rf dist/* && rollup -c",
    "postbuild": "svelte2dts ./src --runOnTs",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "validate": "eslint --ext .js,.ts,.svelte . && svelte-check"
  },
  "devDependencies": {
    "@babel/core": "7.13.13",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-typescript": "8.2.1",
    "@tsconfig/svelte": "1.0.10",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "babel-plugin-optimize-objstr": "1.0.0",
    "eslint": "7.23.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-svelte3": "3.1.2",
    "obj-str": "1.1.0",
    "rollup": "2.43.0",
    "rollup-plugin-svelte": "7.1.0",
    "rollup-plugin-terser": "7.0.2",
    "svelte": "3.35.0",
    "svelte-check": "1.3.0",
    "svelte-preprocess": "4.7.0",
    "svelte2dts": "0.2.12",
    "svelte2tsx": "0.1.185",
    "typescript": "4.2.3"
  }
}
