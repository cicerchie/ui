{
  "name": "@cicerchie/ui",
  "version": "0.4.2",
  "description": "A set of web components for building fast user interfaces.",
  "author": "https://github.com/cicerchia",
  "license": "MIT",
  "homepage": "https://github.com/cicerchie/ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cicerchie/ui.git"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/cicerchia"
  },
  "bugs": {
    "url": "https://github.com/cicerchie/ui/issues"
  },
  "keywords": [
    "svelte ui",
    "svelte",
    "tailwind ui",
    "tailwindcss",
    "web components",
    "component library",
    "design system"
  ],
  "files": [
    "src",
    "dist",
    "tailwind.config.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "svelte": "src/index.ts",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rm -rf dist/* && rollup -c",
    "postbuild": "node ./scripts/postbuild",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "validate": "eslint --ext .js,.ts,.svelte . && svelte-check",
    "storybook": "cd storybook & npm run dev"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@rollup/plugin-typescript": "8.2.5",
    "@tsconfig/svelte": "2.0.1",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "babel-plugin-optimize-objstr": "1.0.0",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-svelte3": "3.2.0",
    "obj-str": "1.1.0",
    "rollup": "2.56.2",
    "rollup-plugin-svelte": "7.1.0",
    "rollup-plugin-terser": "7.0.2",
    "svelte": "3.42.1",
    "svelte-check": "2.2.4",
    "svelte-preprocess": "4.7.4",
    "svelte2tsx": "0.4.5",
    "typescript": "4.3.5"
  }
}
